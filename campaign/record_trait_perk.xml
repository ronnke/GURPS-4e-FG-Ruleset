<root>
  <windowclass name="trait_perk" copy="record_window">
    <windowmenu>
      <showlock />
      <right>chat_output</right>
    </windowmenu>
  </windowclass>
  <windowclass name="trait_perk_header" copy="record_header" />

  <windowclass name="trait_perk_main">
    <margins control="0,0,0,2" />
    <script file="campaign/scripts/trait_perk_main.lua" />
    <sheetdata>
      <anchor_column name="columnanchor" />

      <label_column name="type_label">
        <static textres="trait_type_label" />
      </label_column>
      <string_columnh name="type" />

      <label_column name="page_label">
        <static textres="trait_page_label" />
      </label_column>
      <string_columnh name="page" />

      <line_column name="divider1" />

      <label_column name="points_label">
        <static textres="trait_points_label" />
      </label_column>
      <number_columnh name="points" />

      <line_column name="divider2" />

      <ft_columnh name="text">
        <empty textres="ft_empty" hidereadonly="true" />
      </ft_columnh>
    </sheetdata>
  </windowclass>
</root>
