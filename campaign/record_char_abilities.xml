<root>
	<windowclass name="charsheet_abilities">
    <sheetdata>
			<subwindow name="skills">
        <anchored position="insidetopleft" offset="0,0">
          <bottom />
          <right />
        </anchored>
				<class>charsheet_skills</class>
			</subwindow>

			<subwindow name="spells">
        <anchored position="insidetopleft" offset="0,0">
          <bottom />
          <right />
        </anchored>
        <class>charsheet_spells</class>
			</subwindow>

			<subwindow name="powers">
        <anchored position="insidetopleft" offset="0,0">
          <bottom />
          <right />
        </anchored>
        <class>charsheet_powers</class>
			</subwindow>

			<subwindow name="other">
        <anchored position="insidetopleft" offset="0,0">
          <bottom />
          <right />
        </anchored>
        <class>charsheet_other</class>
			</subwindow>

			<tabs_charabilities>
				<tab>
					<icon>tab_skills</icon>
					<subwindow>skills</subwindow>
				</tab>
				<tab>
					<icon>tab_spells</icon>
					<subwindow>spells</subwindow>
				</tab>
				<tab>
					<icon>tab_powers</icon>
					<subwindow>powers</subwindow>
				</tab>
				<tab>
					<icon>tab_other</icon>
					<subwindow>other</subwindow>
				</tab>
				<activate>1</activate>
			</tabs_charabilities>
		
		</sheetdata>
	</windowclass>
</root>
