<root>
	<!-- GURPS combat tracker templates -->
  <template name="button_ct_menu">
    <metalplate>
      <bounds>120,-45,50,26</bounds>
      <tooltip textres="ct_tooltip_menu" />
      <static textres="ct_label_menu" />
      <script file="ct/scripts/ct_menu.lua" />
    </metalplate>
  </template>
  
  <template name="label_ct_header_speed">
    <label_ct_right>
      <static textres="ct_label_speed" />
    </label_ct_right>
  </template>
  <template name="label_ct_header_hps">
    <label_ct_right>
      <static textres="ct_label_hps" />
    </label_ct_right>
  </template>
  <template name="label_ct_header_fps">
    <label_ct_right>
      <static textres="ct_label_fps" />
    </label_ct_right>
  </template>
  <template name="label_ct_header_condition">
    <label_ct_right>
      <static textres="ct_label_condition" />
    </label_ct_right>
  </template>
  <template name="label_ct_header_injury">
    <label_ct_right>
      <static textres="ct_label_injury" />
    </label_ct_right>
  </template>
  <template name="label_ct_header_fatigue">
    <label_ct_right>
      <static textres="ct_label_fatigue" />
    </label_ct_right>
  </template>
  <template name="spacer_ct_host_header_button_skip">
    <spacer_ct_host_header_buttons>
      <anchored width="45" />
    </spacer_ct_host_header_buttons>
  </template>

  <template name="number_clientct_speed">
    <number_ct_static name="speed">
      <anchored to="rightanchor" width="30" height="20">
        <top />
        <right anchor="left" relation="relative" offset="-10" />
      </anchored>
      <script>
        function onValueChanged()
	        window.windowlist.applySort();
        end
      </script>
    </number_ct_static>
  </template>

	<template name="label_ct_ability">
		<label_fieldtop>
			<anchored offset="0,-5" height="13"/>
			<frame name="attributelabel" />
      <color>#000000</color>
		</label_fieldtop>
	</template>
	
</root>
